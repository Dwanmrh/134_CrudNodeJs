<h1 class="text-center">Zoo Animals</h1>
<table class="table table-striped table-hover mt-4">
  <thead class="table-primary">
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Genre</th>
      <th>Duration</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% films.forEach((film, index) => { %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= film.title %></td>
      <td><%= film.genre %></td>
      <td><%= film.duration %></td>
      <td><%= film.description %></td>
      <td>
        <a href="/movie/edit/<%= film.id %>" class="btn btn-warning btn-sm"
          >Edit</a
        >
        <form
          action="/movie/<%= film.id %>?_method=DELETE"
          method="POST"
          class="d-inline"
        >
          <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
<a href="/movie/create" class="btn btn-success">Add New Film</a>

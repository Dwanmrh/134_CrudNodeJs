<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <title>Jadwal Film</title>
  </head>
  <body>
    <div class="container mt-5">
      <h2>Jadwal Film</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Tanggal</th>
            <th>Waktu</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% jadwal.forEach((item, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= item.tanggal %></td>
            <td><%= item.waktu %></td>
            <td>
              <a href="/user/kursi/<%= item.id %>" class="btn btn-success"
                >Pesan</a
              >
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>

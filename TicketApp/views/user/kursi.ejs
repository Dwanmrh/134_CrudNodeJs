<!DOCTYPE html>
<html lang="en">
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <title>Pilih Kursi</title>
  </head>
  <body>
    <div class="container mt-5">
      <h2>Pilih Kursi</h2>
      <form action="/user/pesan" method="POST">
        <input type="hidden" name="jadwalId" value="<%= jadwalId %>" />
        <div class="row">
          <% kursi.forEach((seat) => { %>
          <div class="col-md-2">
            <div class="form-check">
              <input class="form-check-input" type="radio" name="kursiId"
              id="seat-<%= seat.id %>" value="<%= seat.id %>" <%= seat.status
              === 'booked' ? 'disabled' : '' %>>
              <label
                class="form-check-label <%= seat.status === 'booked' ? 'text-danger' : '' %>"
                for="seat-<%= seat.id %>"
              >
                <%= seat.nomor_kursi %>
              </label>
            </div>
          </div>
          <% }); %>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Pesan Kursi</button>
      </form>
    </div>
  </body>
</html>
